extends ../layouts/index

block content
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Inmobiliaria
            span.font-normal.mx-2 Soldati
        h2.text-center.font-extrabold.text-2xl=title

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" noValidate autocomplete="on")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div.mt-5.mb-5
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Contraseña nueva
                        input#email.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ej. Tu contraseña", type="password", name="password")
                    
                    input(class="mt-5 w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3" type="submit" value="Guardar contraseña")