extends ../layouts/index

block content
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Inmobiliaria
            span.font-normal.mx-2 Soldati
        h2.text-center.font-extrabold.text-2xl=title

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/signup" noValidate autocomplete="on")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Nombre completo
                        input#nombre.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ej. Jhon Doe", type="text", name="name" value=user ? user.name : "")
                    div.mt-5
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Dirección de email
                        input#email.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ej. jhon@doe.com", type="email", name="email" value=user ? user.email : "")

                    div.mt-5
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingrese más de 8 dígitos", type="password", name="password")

                    div.mt-5
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password_confirmation") Confirme contraseña
                        input#password_confirmation.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Confirma tu contraseña", type="password", name="password_confirmation")

                    div.flex.items-center.justify-between.mt-5
                        a(class="font-semibold text-xs text-gray-600" href="/auth/login") ¿Ya tienes una cuenta? Inicia sesión
                        a(class="font-semibold text-xs text-gray-600" href="/auth/recover-password") ¿Olvidaste tu contraseña?

                    input(class="w-full mt-5 bg-blue-600 hover:bg-blue-700 text-white font-bold py-3" type="submit" value="Crear cuenta")